  "*"             { appendBufferString(yyget_extra(yyscanner), yytext); }
  \xa             { appendBufferString(yyget_extra(yyscanner), yytext); }
}

"/***"             { yy_push_state(doccomment_file,yyscanner); clearBuffer(yyget_extra(yyscanner)); }
<doccomment_file>{
